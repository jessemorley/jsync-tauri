{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JSync",
  "version": "0.1.10",
  "identifier": "com.jmorley.jsync",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "JSync",
        "width": 360,
        "height": 500,
        "visible": false,
        "decorations": false,
        "shadow": true,
        "hiddenTitle": true,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/tray-iconTemplate.png"
    ],
    "externalBin": [
      "binaries/rclone"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1RDBGMEUzRjM3RTI1NDAKUldSQUpYN3o0L0RROVpzV2U0VXE0eDMrRTFieEFsRTRHSFgrS3dpemxFSTZtdXlwVXlCMXoxa2wK",
      "endpoints": [
        "https://github.com/jessemorley/jsync-tauri/releases/latest/download/latest.json"
      ]
    }
  }
}
